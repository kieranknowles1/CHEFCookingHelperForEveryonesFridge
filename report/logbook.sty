\ProvidesPackage{logbook}

% For [H] in table
\RequirePackage{float}
% For background colour
\RequirePackage[table,usenames,dvipsnames]{xcolor}

\newcommand{\logbookshadecolour}{Apricot}

% Add an entry to the logbook
% Usage:
%   #1 Heading
%   #2 Date and time of the meeting
%   #3 Brief description of work done since the last meeting
%   #4 Number of hours working since the last meeting
%   #5 Questions/items to discuss at the meeting (agenda)
%   #6 The agreed tasks for the next meeting
%   #7 Documents discussed/any other issues
%   #8 Date and time of the next meeting
%   #9 As scheduled (yes/no)
\newcommand{\logbookentry}[9]
{
    \subsection*{#1}
    \begin{table}[H]
        \centering
        \begin{tabulary}{\textwidth}{LL}
            \toprule
            \rowcolor{\logbookshadecolour}
            \textbf{Date and time of meeting:} & #2 \\\midrule
            \rowcolor{\logbookshadecolour}
            \textbf{Brief description of work done since the last meeting:} & #3 \\
            \rowcolor{\logbookshadecolour}
            \textbf{Number of hours spent on the project since the last meeting:} & #4 \\
            \rowcolor{\logbookshadecolour}
            \textbf{Questions/items to discuss at the meeting (agenda):} & #5 \\
            \textbf{As scheduled:} & #9 \\
            \textbf{Agreed tasks for next meeting:} & #6 \\
            \textbf{Documents discussed /any other issues:} & #7 \\
            \textbf{Date and time of next meeting:} & #8 \\
            \bottomrule
        \end{tabulary}
    \end{table}
}
