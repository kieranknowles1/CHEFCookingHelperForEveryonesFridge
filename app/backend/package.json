{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for the CHEF system.",
  "main": "index.js",
  "scripts": {
    "generate-types": "openapi-typescript ./api.yml --output src/types/api.generated.ts",
    "setup": "node build/setup/index.js",
    "start": "node build/index.js",
    "build": "tsc -p .",
    "dev": "nodemon src/index.ts",
    "dev-setup": "nodemon src/setup/index.ts",
    "test": "mocha --reporter dot --require ts-node/register src/tests/**/*.ts",
    "test:coverage": "nyc npm run test",
    "flamegraph": "0x build/index.js"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": false,
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/tests/**/*.ts"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ],
    "report-dir": "coverage"
  },
  "author": "Kieran Knowles",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/better-sqlite3": "^7.6.7",
    "@types/cli-progress": "^3.11.5",
    "@types/convert-units": "^2.3.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/progress-stream": "^2.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "openapi-typescript": "^6.7.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^4.15.0",
    "@types/supertest": "^6.0.2",
    "async-mutex": "^0.4.0",
    "better-sqlite3": "^9.1.1",
    "cli-progress": "^3.12.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.2",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.1.2",
    "fraction.js": "^4.3.4",
    "io-ts": "^2.2.21",
    "progress-stream": "^2.0.0",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  }
}
